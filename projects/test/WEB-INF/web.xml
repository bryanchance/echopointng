<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>EchoPoint Test Application</display-name>
    <description>
        An test application to test features of the Echo2 Platform with regards to EchoPoint.
    </description>

    <servlet>
      <servlet-name>EchoPointTestServletNG</servlet-name>
      <servlet-class>echopointng.test.TestServletNG</servlet-class>
    </servlet>
   <servlet-mapping>
      <servlet-name>EchoPointTestServletNG</servlet-name>
      <url-pattern>/testng</url-pattern>
    </servlet-mapping>

   <servlet>
      <servlet-name>EchoPointErrorPageNG</servlet-name>
      <servlet-class>echopointng.test.TestErrorPageServletNG</servlet-class>
    </servlet>
   <servlet-mapping>
      <servlet-name>EchoPointErrorPageNG</servlet-name>
      <url-pattern>/testngerrorpage</url-pattern>
    </servlet-mapping>

     
</web-app>
